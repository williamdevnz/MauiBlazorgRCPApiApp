@page "/counter"
@using MudBlazor;
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>



<MudButton OnClick="OpenDialog">Abrir EditForm</MudButton>

@code {

    private void OpenDialog()
    {
      var options = new DialogOptions { CloseOnEscapeKey = true, Position = DialogPosition.Center};
      DialogService.Show<Dialogo>("Edit Person:", options);
    }
    
    private void HandleValidSubmit1()
    {
        Snackbar.Add("Formulario enviado");
    }
}


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}

